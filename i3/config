           #inactive_workspace #1C1C1C #1C1C1C #FF535A
           urgent_workspace    #1C1C1C #C27C28 #1C1C1C
           #statusline         #A0A0A0
           #statusline         #85678F
           #statusline         #5F819D
           statusline          #A54242
           #statusline         #8C9440
           #statusline         #DE935F
           #statusline         #707880
           #statusline         #75507B
           focused_separator   #FF535A
           separator           #1C1C1C
    }
}

